<header class="flex items-center justify-between flex-wrap bg-indigo-100 px-4 md:h-16">
  <div class="text-indigo-800 mr-6">
    <span class="font-semibold text-xl tracking-tight">
      <%= link_to 'Fledge Hub', root_path, class: 'no-underline' %>
    </span>
    <span class="text-sm pt-1 text-indigo-900 tracking-tight hidden md:block">
      個人開発者のための、技術を検索できる開発サービス投稿サイト
    </span>
  </div>
  <div class='ml-auto'>
    <div class="pr-0">
      <div class="flex relative inline-block float-right items-center">
        <%= link_to 'Users', users_path, class: 'btn text-indigo-800 hover:bg-indigo-200' %>
        <% if logged_in? %>
          <%= link_to 'Stocks', mypage_stocks_path, class: 'btn text-indigo-800 hover:bg-indigo-200' %>
          <div  class="relative text-sm text-gray-100" data-controller="dropdown">
            <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="inline-block select-none">
              <%= image_tag current_user.avatar, alt: current_user.display_name, class: 'items-center focus:outline-none md:w-9 h-9 sm:w-6 h-6 rounded-full' %>
            </div>
            <div id="userMenu" data-dropdown-target="menu" class="absolute right-0 hidden">
              <div class="bg-white shadow rounded border overflow-hidden">
                <ul class="list-reset text-gray-900">
                  <li><%= link_to 'Mypage', mypage_path, class: 'px-4 py-2 block hover:bg-indigo-100 no-underline hover:no-underline' %></li>
                  <li><%= link_to 'Settings', settings_profile_path, class: 'px-4 py-2 block hover:bg-indigo-100 no-underline hover:no-underline' %></li>
                  <li>
                    <hr class="border-t mx-2 border-gray-400">
                  </li>
                  <li><%= link_to 'Logout', logout_path, method: :delete, class: 'px-4 py-2 block hover:bg-indigo-100 no-underline hover:no-underline' %></li>
                </ul>
              </div>
            </div>
          </div>
        <% else %>
          <%= link_to 'Login with GitHub', auth_at_provider_path(provider: :github), class: 'btn bg-black text-white' %>
        <% end %>
      </div>
    </div>
  </div>
</header>
