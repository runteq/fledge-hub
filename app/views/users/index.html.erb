<% content_for(:title, 'ユーザー一覧') %>

<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4">
  <% @users.each do |user| %>
    <div class="p-4">
      <div class="flex-col  flex justify-center items-center">
        <div class="flex-shrink-0">
          <%= link_to user_path(user.screen_name), class: "block relative" do %>
            <%= image_tag user.avatar, alt: user.display_name, class: 'mx-auto object-cover rounded-full h-20 w-20' %>
          <% end %>
        </div>
        <div class="mt-2 text-center flex flex-col">
          <span class="text-gray-600 dark:text-white text-lg font-medium">
            <%= user.display_name %>
          </span>
          <span class="text-gray-400 text-sm">
            <%= user.screen_name %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>
