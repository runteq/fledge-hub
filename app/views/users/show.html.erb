<% content_for(:title, @user.display_name) %>
<div>
  <div class="text-center mb-5 opacity-90">
    <%= image_tag @user.avatar, alt: @user.display_name, class: 'mx-auto object-cover rounded-full h-32 w-32' %>
  </div>
  <div class="text-center mb-4">
    <p class="text-xl text-gray-800 dark:text-white">
      <%= @user.display_name %>
    </p>
    <p class="text-l text-gray-500 dark:text-gray-200 font-light">
      <%= @user.screen_name %>
    </p>
  </div>

  <div class="pt-4 flex border-t border-gray-200 w-40 mx-auto px-8 text-gray-500 items-center justify-between">
    <a href="#" class='text-3xl'>
      <i class="fab fa-twitter"></i>
    </a>
    <a href="#" class='text-3xl'>
      <i class="fab fa-github"></i>
    </a>
  </div>
</div>

<div class="flex flex-wrap -mx-4 mt-4">
  <%= render(ProductComponent.with_collection(@products)) %>
</div>
